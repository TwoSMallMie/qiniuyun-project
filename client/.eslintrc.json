{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "vue/no-parsing-error": "off"
    },
    "overrides": [
    {
        "files": ["*.js", "*.vue"],
        "rules": {
            "no-constant-condition": "off"
        }
    }
  ]
}
